# Configuraci√≥n principal del proyecto (PARA DOCKER)
DATABASE_URL=postgresql://hotel_user:hotel_password@postgres:5432/hotel_reservations
REDIS_URL=redis://redis:6379/0
SECRET_KEY=hotel-secret-key-change-in-production-environment-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Gateway
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000

# Services URLs (Para Docker - usar nombres de servicios)
AUTH_SERVICE_URL=http://auth-service:8001
BOOKING_SERVICE_URL=http://booking-service:8002
INVENTORY_SERVICE_URL=http://inventory-service:8003
PAYMENT_SERVICE_URL=http://payment-service:8004
NOTIFICATION_SERVICE_URL=http://notification-service:8005

# Database configurations (Para Docker)
POSTGRES_USER=hotel_user
POSTGRES_PASSWORD=hotel_password
POSTGRES_DB=hotel_reservations
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (Para Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # or live

# External APIs
BOOKING_COM_API_KEY=your_booking_com_api_key
EXPEDIA_API_KEY=your_expedia_api_key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# File Storage
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE=5242880  # 5MB

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
