# Variables de entorno para el sistema de reservas de hotel
# Copiar este archivo a .env y configurar los valores apropiados

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DATABASE_URL=postgresql://hotel_user:hotel_password@postgres:5432/hotel_reservations
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hotel_reservations
DB_USER=hotel_user
DB_PASSWORD=hotel_password

# ==============================================
# CONFIGURACIÓN DE REDIS
# ==============================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
SECRET_KEY=your-super-secret-key-change-this-in-production-with-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# CONFIGURACIÓN DE STRIPE
# ==============================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================
# CONFIGURACIÓN DE PAYPAL
# ==============================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox o live

# ==============================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM=noreply@hotelreservations.com
EMAIL_FROM_NAME=Hotel Reservations System

# ==============================================
# CONFIGURACIÓN DE TWILIO (SMS)
# ==============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# CONFIGURACIÓN DE LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================
# CONFIGURACIÓN DE CORS
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:80
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
